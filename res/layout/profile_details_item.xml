<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
<TextView
	android:id="@+id/tv_profile_detail_header"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="20dp"
	android:layout_marginTop="10dp"
	android:text="@string/profile_details_address"
	android:textColor="@color/grey_subtitle"
	android:textSize="15sp" />

<TextView
	android:id="@+id/tv_profile_detail_data"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="20dp"
	android:layout_marginTop="3dp"
	android:text="@string/profile_details_address_data"
	android:textSize="13sp" />

</LinearLayout>
