<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/email_login_background"
    tools:context="com.familybox.wazapps.familybox.DialogFragmentApproveInvite" >

    <ImageButton
        android:id="@+id/email_login_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/email_login_x_button" />

    <TextView
        android:id="@+id/email_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/email_login_title"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/email_login_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_login_title"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="50dp"
        android:text="@string/email_login_address"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/email_login_adress_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/email_login_address"
        android:layout_below="@id/email_login_address"
        android:ems="12"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/email_login_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/email_login_address"
        android:layout_below="@id/email_login_adress_input"
        android:layout_marginTop="24dp"
        android:text="@string/email_login_pw"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/email_login_pw_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/email_login_pw"
        android:layout_below="@id/email_login_pw"
        android:ems="12"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/email_login_pw_input"
        android:layout_alignRight="@id/email_login_pw_input"
        android:layout_below="@id/email_login_pw_input"
        android:layout_marginTop="25dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/email_login_log_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/selector_login" />

        <ImageButton
            android:id="@+id/email_login_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/selector_cancel" />
    </LinearLayout>

</RelativeLayout>