<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/email_login_background" >

    <LinearLayout
        android:id="@+id/ll_about_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/ib_about_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/email_login_x_button" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="7dp"
            android:gravity="center_horizontal"
            android:text="@string/ab_about"
            android:textColor="@android:color/black"
            android:textSize="22sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_about_chuck"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_below="@+id/ll_about_title"
        android:layout_centerInParent="true"
        android:src="@drawable/chuck"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_about_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Version" />

    <Button
        android:id="@+id/button_egg"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_about_version"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

</RelativeLayout>