<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_edit_profile">
    <RelativeLayout android:layout_width="wrap_content"
        android:id="@+id/expand_network_cover_top"
        android:layout_height="wrap_content"
        android:background="@drawable/title_cover_expand_network"
        android:layout_alignParentTop="true"> 
        
        <TextView android:text="Expand Network"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="24sp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/expand_network_cover_bottom" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title_cover_bottom_expand_network"
        android:layout_below="@id/expand_network_cover_top">
        
        <TextView 
            android:text="Invite more family members to your family tree"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />        
    </RelativeLayout>
    
    <ImageButton 
        android:id="@+id/expand_network_facebook_button"
        android:src="@drawable/button_expand_network_facebook_invite"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expand_network_cover_bottom"
        android:layout_marginTop="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    
    <ImageButton 
        android:id="@+id/expand_network_email_button"
        android:layout_below="@id/expand_network_facebook_button"
        android:src="@drawable/button_expand_network_email_invite"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
        
</RelativeLayout>
