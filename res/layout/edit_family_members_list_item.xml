<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/family_members_list_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/fl_edit_close_family_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <EditText
            android:id="@+id/et_edit_close_family_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-3dp"
            android:text="@string/father"
            android:textAlignment="center"
            android:textColor="@color/grey_subtitle"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_edit_close_family_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:text="@string/father"
            android:textSize="12sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_edit_profile_aprove"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/fl_edit_close_family_role"
        android:src="@drawable/action_bar_edit_profile_accept_button"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rl_edit_profile_family_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_edit_close_family_role"
        android:layout_centerHorizontal="true" >

        <com.wazapps.familybox.util.RoundedImageView
            android:id="@+id/riv_edit_profile_family_member"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-3dp"
            android:background="@drawable/family_member_profile_pic_elipse_lines"
            android:cropToPadding="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_close_family_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/riv_edit_profile_family_member"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-3dp"
            android:text="@string/father_name"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>