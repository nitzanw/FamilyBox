<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_family_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title_background"
        android:gravity="center"
        android:text="Family Name"
        android:textSize="23sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_family_profile_title"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/parents"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/rl_family_profile_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_family_profile_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:id="@+id/ll_family_profile_parents"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_family_profile_parent_left"
                android:layout_width="65dp"
                android:layout_height="90dp"
                android:layout_marginBottom="68dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/ll_family_profile_parents_connectors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_family_profile_horizontal_connector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/parents_profile_pics_horizontal_connector" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vertical_connector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_family_profile_parent_right"
                android:layout_width="65dp"
                android:layout_height="90dp"
                android:layout_marginBottom="68dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_family_profile_parents"
            android:layout_marginBottom="20dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="10dp"
                android:text="@string/children"
                android:textSize="20sp" />

            <com.wazapps.familybox.util.HorizontialListView
                android:id="@+id/hlv_family_profile_children"
                android:layout_width="match_parent"
                android:layout_height="85dp" >
            </com.wazapps.familybox.util.HorizontialListView>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/rl_family_profile_tree"
        android:layout_marginBottom="8dp" >

        <TextView
            android:id="@+id/tv_family_profile_albums_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/separator_line"
            android:paddingLeft="10dp"
            android:text="@string/photo_albums"
            android:textSize="19sp" />

        <com.wazapps.familybox.util.HorizontialListView
            android:id="@+id/hlv_family_profile_albums"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tv_family_profile_albums_title"
            android:background="@drawable/albums_area_background" >
        </com.wazapps.familybox.util.HorizontialListView>
    </RelativeLayout>

</RelativeLayout>