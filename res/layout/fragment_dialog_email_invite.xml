<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/email_login_background"
    tools:context="com.familybox.wazapps.familybox.DialogFragmentApproveInvite" >

    <ImageButton
        android:id="@+id/email_invite_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/email_login_x_button" />

    <TextView
        android:id="@+id/email_invite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/email_invite_title"
        android:textColor="@android:color/black"
        android:textSize="22sp" />
    
    <TextView android:id="@+id/email_invite_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/email_invite_title"
        android:layout_marginTop="45dp"
        android:textSize="18sp"
        android:text="Add family members \n   To the family tree"/>

    <TextView
        android:id="@+id/email_invite_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_invite_text"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="30dp"
        android:text="@string/email_login_address"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/email_invite_adress_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/email_invite_address"
        android:layout_below="@id/email_invite_address"
        android:ems="12"
        android:inputType="textWebEmailAddress" >

        <requestFocus />
    </EditText>

	<ImageButton
		android:id="@+id/email_invite_send_button"
		android:layout_marginTop="30dp"
		android:layout_below="@id/email_invite_adress_input"
		android:layout_centerHorizontal="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:src="@drawable/selector_send" />
	
</RelativeLayout>