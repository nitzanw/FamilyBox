<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.familybox.wazapps.familybox.NewsFeedFragment" >

    <ListView
        android:id="@+id/news_posts_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white_cream_ab"
        android:visibility="invisible" >
    </ListView>

    <LinearLayout
        android:id="@+id/ll_news_feed_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white_cream_ab"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tree_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/news_feed_empty"
            android:textColor="@color/gray_dialog_text_color"
            android:textSize="25dp" />
/>
    </LinearLayout>

</RelativeLayout>